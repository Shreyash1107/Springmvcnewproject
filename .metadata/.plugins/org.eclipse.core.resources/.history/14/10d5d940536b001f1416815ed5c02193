import org.model.FeedbackModel;
import org.repository.Feedbackrepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

@Service
public class FeedbackServiceImpl implements FeedbackService {

    @Autowired
    Feedbackrepository feedrepo;

    @Autowired
    EmailService emailService;

    public boolean issubmitFeedback(FeedbackModel fmodel) {
        boolean isSubmitted = feedrepo.issubmitFeedback(fmodel);
        if (isSubmitted) {
            String adminEmail = "admin@example.com"; // Replace with the actual admin email
            String feedbackDetails = "Details: " + fmodel.getDetails() + "\nRating: " + fmodel.getRating();
            emailService.sendFeedbackNotification(adminEmail, feedbackDetails);
        }
        return isSubmitted;
    }
}
