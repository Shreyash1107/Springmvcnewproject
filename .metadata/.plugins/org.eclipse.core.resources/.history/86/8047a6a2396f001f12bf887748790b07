function validateDeptName() {
    let deptName = document.getElementById("txtDept").value.trim(); 
    let validDeptName = /^[a-zA-Z\s]+$/; 
    let errorElement = document.getElementById("deptError");

    if (deptName === "") {
        errorElement.innerHTML = "Department name cannot be empty.";
        return false;
    } else if (!validDeptName.test(deptName)) {
        errorElement.innerHTML = "Invalid department name. Only letters allowed.";
        return false;
    } else {
        errorElement.innerHTML = "";
        return true;
    }
}
