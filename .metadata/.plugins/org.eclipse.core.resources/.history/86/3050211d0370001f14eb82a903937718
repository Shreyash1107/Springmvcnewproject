function confirmDelete(aid) {
    if (confirm("Are you sure you want to remove this Alumni?")) {
        window.location.href = 'del?aid=' + aid;
    }
}
function confirmUpdate(aid, dept_name) {
    if (confirm("Are you sure you want to update this department?")) {
        window.location.href = 'update?dept_id=' + dept_id + '&dept_name=' + encodeURIComponent(dept_name);
    }
}