@Service("deptservice")
public class DepartmentServiceImpl implements DepartmentService {

    @Autowired
    Departmentrepository deptrepo;

    @Override
    public boolean isDepartmentAded(DepartmentModel dmodel) {
        // Convert the input department name to lowercase for comparison
        String inputDeptName = dmodel.getDept_name().toLowerCase();
        
        // Get all departments
        List<DepartmentModel> existingDepts = deptrepo.getdept();
        
        // Iterate and compare in a case-insensitive way
        for (DepartmentModel existingDept : existingDepts) {
            if (existingDept.getDept_name().toLowerCase().equals(inputDeptName)) {
                return false; // Department already exists
            }
        }
        
        // Save the department if it doesn't exist
        deptrepo.save(dmodel);
        return true; // Successfully added
    }

    @Override
    public List<DepartmentModel> getdept() {
        return deptrepo.getdept();
    }

    @Override
    public void isDepartmentdeleted(int dept_id) {
        deptrepo.isDepartmentdeleted(dept_id);
    }

    @Override
    public boolean isupdateDepartment(DepartmentModel deptmodel) {
        return deptrepo.isupdateDepartment(deptmodel);
    }
}
