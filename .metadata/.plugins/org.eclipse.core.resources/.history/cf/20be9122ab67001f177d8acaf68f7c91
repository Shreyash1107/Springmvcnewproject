}

/* Heading style inside the login form */
.login-form h3 {
    margin-bottom: 1.5rem; /* Space below the heading */
    font-size: 1.75rem; /* Increase font size for the heading */
    color: #343a40; /* Dark grey color for better readability */
}

/* Style for form fields */
.login-form .form-group {
    margin-bottom: 1.25rem; /* Space between form groups */
}

