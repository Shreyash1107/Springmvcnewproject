function validateEvents() {
    var name = document.forms["frm"]["Name"].value;
    var date = document.forms["frm"]["Date"].value;
    var time = document.forms["frm"]["Time"].value;
    var events = document.getElementById("everror");
    var namePattern = /^[A-Za-z\s]+$/;

    // Clear previous error messages
    events.innerHTML = "";

    // Validate Event Name
    if (name === "") {
        events.innerHTML += "Event Name is required.<br>";
        return false;
    } else if (/^\s/.test(name)) {
        events.innerHTML += "Event Name should not start with spaces.<br>";
        return false;
    } else if (!namePattern.test(name.trim())) {
        events.innerHTML += "Event Name should contain only letters and spaces.<br>";
        return false;
    }
    if (date === "") {
        events.innerHTML += "Event Date is required.<br>";
        return false;
    } else {
        var today = new Date().toISOString().split('T')[0];
        if (date < today) {
            events.innerHTML += "Event Date cannot be in the past.<br>";
            return false;
        }
    }

    // Validate Time
    if (time === "") {
        events.innerHTML += "Event Time is required.<br>";
        return false;
    } else {
        // Example time validation: ensure time is in 24-hour format
        var timePattern = /^([01]\d|2[0-3]):([0-5]\d)$/;
        if (!timePattern.test(time)) {
            events.innerHTML += "Event Time must be in 24-hour format (HH:MM).<br>";
            return false;
        }
    }

    // If all validations pass
    return true;
}
