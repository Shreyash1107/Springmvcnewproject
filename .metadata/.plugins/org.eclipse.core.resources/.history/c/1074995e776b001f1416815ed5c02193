/* Media Queries for Responsiveness */

/* Adjust layout for screens smaller than 992px (tablets and small desktops) */
@media (max-width: 991.98px) {
    .sidebar {
        width: 200px;
    }

    .content {
        margin-left: 200px;
        padding: 15px;
        padding-top: 70px;
    }

    .sidebar a {
        font-size: 18px;
    }
}

/* Adjust layout for screens smaller than 768px (mobile devices) */
@media (max-width: 767.98px) {
    .sidebar {
        width: 100%;
        height: auto;
        position: relative;
        transform: translateX(-100%); /* Hide sidebar by default */
    }

    .sidebar.collapse.show {
        transform: translateX(0); /* Show sidebar when toggled */
    }

    .content {
        margin-left: 0;
        padding: 15px;
        padding-top: 60px;
    }

    .navbar {
        position: relative;
    }
}

/* Adjust layout for very small screens (smaller than 576px) */
@media (max-width: 575.98px) {
    .navbar-brand {
        font-size: 18px;
    }

    .sidebar a {
        padding: 8px;
        font-size: 14px;
    }

    .content {
        padding: 10px;
    }

    .table th, .table td {
        font-size: 12px;
    }
}
