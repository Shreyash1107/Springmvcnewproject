function confirmDelete(bid) {
    if (confirm("Are you sure you want to delete this department?")) {
        window.location.href = 'remove?bid=' + bid;
    }
}

function confirmUpdate(bid, dept_name) {
    if (confirm("Are you sure you want to update this department?")) {
        window.location.href = 'updatebatches?bid=' + bid + '&batch_year=' + encodeURIComponent(dept_name);
    }
}
