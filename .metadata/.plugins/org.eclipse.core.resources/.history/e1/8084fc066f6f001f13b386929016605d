function validateForm() {
    let isValid = true;

    // Name validation
    const name = document.getElementById('inputname').value;
    const nameError = document.getElementById('nameError');
    if (!/^[a-zA-Z0-9\s\-\.,'"]+$/.test(name)) {
        nameError.innerHTML = 'Invalid name. Only letters, digits, spaces, and certain special characters are allowed.';
        nameError.style.color = 'red'; // Apply red color
        isValid = false;
    } else {
        nameError.innerHTML = '';
    }

    // Email validation
    const email = document.getElementById('inputemail').value;
    const emailError = document.getElementById('emailError');
    if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
        emailError.innerHTML = 'Invalid email format.';
        emailError.style.color = 'red'; // Apply red color
        isValid = false;
    } else {
        emailError.innerHTML = '';
    }

    // Contact validation
    const contact = document.getElementById('inputcontact').value;
    const contactError = document.getElementById('contactError');
    if (!/^\d+$/.test(contact)) {
        contactError.innerHTML = 'Contact number should contain only digits.';
        contactError.style.color = 'red'; // Apply red color
        isValid = false;
    } else {
        contactError.innerHTML = '';
    }

    // Age validation
    const age = document.getElementById('inputage').value;
    const ageError = document.getElementById('ageError');
    if (age <= 0) {
        ageError.innerHTML = 'Age must be a positive number.';
        ageError.style.color = 'red'; // Apply red color
        isValid = false;
    } else {
        ageError.innerHTML = '';
    }

    // Company validation
    const company = document.getElementById('inputcompany').value;
    const companyError = document.getElementById('companyError');
    if (!/^[a-zA-Z0-9\s\-\.,'"]+$/.test(company)) {
        companyError.innerHTML = 'Invalid company name. Only letters, digits, spaces, and certain special characters are allowed.';
        companyError.style.color = 'red'; // Apply red color
        isValid = false;
    } else {
        companyError.innerHTML = '';
    }

    // Gender validation
    const gender = document.getElementById('gend').value;
    const genderError = document.getElementById('genderError');
    if (gender === '') {
        genderError.innerHTML = 'Please select a gender.';
        genderError.style.color = 'red'; // Apply red color
        isValid = false;
    } else {
        genderError.innerHTML = '';
    }

    // Department validation
    const dept = document.getElementById('deptSelect').value;
    const deptError = document.getElementById('deptError');
    if (dept === '') {
        deptError.innerHTML = 'Please select a department.';
        deptError.style.color = 'red'; // Apply red color
        isValid = false;
    } else {
        deptError.innerHTML = '';
    }

    // Batch validation
    const batch = document.getElementById('batchselect').value;
    const batchError = document.getElementById('batchError');
    if (batch === '') {
        batchError.innerHTML = 'Please select a passout batch.';
        batchError.style.color = 'red'; // Apply red color
        isValid = false;
    } else {
        batchError.innerHTML = '';
    }

    return isValid;
}
