function validateDeptName() {
    let deptName = document.getElementById("exampleInputdept").value;
    let validDeptName = /^[a-zA-Z\s]+$/; // Only letters and spaces allowed

    if (!validDeptName.test(deptName)) {
        document.getElementById("deptError").innerHTML = "Invalid department name. Only letters allowed.";
        return false;
    } else {
        document.getElementById("deptError").innerHTML = "";
        return true;
    }
}
